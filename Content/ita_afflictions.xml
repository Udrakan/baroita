      <StatusEffect target="Character" setvalue="true">
        <Affliction identifier="oxygenlow" amount="15" />
      </StatusEffect>
    </Effect>
    <icon texture="Content/UI/MainIconsAtlas.png" sourcerect="640,640,128,128" color="106,106,106,255" origin="0,0"/>
		</Affliction>
	</Override>
</Afflictions>
