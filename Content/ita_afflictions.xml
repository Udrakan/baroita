    type="poison"
    causeofdeathdescription="Died of morbusine poisoning. You didn't make it in time..."
    selfcauseofdeathdescription="You have morbusied to death."
    limbspecific="false"
	indicatorlimb="Torso"
    maxstrength="100"
    >
			<Effect minstrength="0" maxstrength="20"
      minvitalitydecrease="0"
      maxvitalitydecrease="0"
      strengthchange="2"
