  <!-- Name: Morbusine -->
  <!-- Description: A highly potent neurotoxin. -->
  <!-- *************************************************************************************************************************************************************************** -->
  <Morbusine name="" identifier="morbusine" category="Material" cargocontaineridentifier="chemicalcrate" Tags="smallitem,chem,medical,syringe" description="" useinhealthinterface="true" scale="0.3" impactsoundtag="impact_metal_light">
    <PreferredContainer primary="toxcab" spawnprobability="0.01"/>
    <Fabricate suitablefabricators="medicalfabricator" requiredtime="90">
      <RequiredSkill identifier="medical" level="58" />
      <RequiredItem identifier="sulphuricacid" />
      <RequiredItem identifier="deusizine" count="2" />
    </Fabricate>
    <Deconstruct time="20">
      <Item identifier="sulphuricacid" copycondition="true" mincondition="0.1" />
      <Item identifier="deusizine" copycondition="true" mincondition="0.1" />
    </Deconstruct>
    <InventoryIcon texture="Content/Items/InventoryIconAtlas.png" sourcerect="64,640,64,64" origin="0.5,0.5" />
    <Sprite texture="Medicines.png" sourcerect="311,120,62,115" depth="0.6" origin="0.5,0.5" />
    <Body width="60" height="110" density="20" />
    <MeleeWeapon canBeCombined="true" removeOnCombined="true" slots="Any,RightHand,LeftHand" aimpos="5,0" handle1="-5,0" holdangle="220" reload="1.0" msg="ItemMsgPickUpSelect">
      <StatusEffect type="OnUse" target="This" Condition="-50.0" disabledeltatime="true" />
      <StatusEffect tags="poison" type="OnUse" target="Character">
        <Sound file="Content/Items/Medical/Syringe.ogg" range="500" />
        <Affliction identifier="morbusinepoisoning" amount="1" />
      </StatusEffect>
      <!-- Remove the item when fully used -->
      <StatusEffect type="OnBroken" target="This">
        <Remove />
      </StatusEffect>
    </MeleeWeapon>
    <Projectile characterusable="false" launchimpulse="20.0" sticktocharacters="true" launchrotation="-90">
      <StatusEffect type="OnImpact" target="This" Condition="-100.0" disabledeltatime="true">
        <Sound file="Content/Items/Medical/Syringe.ogg" range="500" />
      </StatusEffect>
      <StatusEffect tags="poison" type="OnImpact" target="Character">
        <Affliction identifier="morbusinepoisoning" amount="1" />
      </StatusEffect>
    </Projectile>
  </Morbusine>

