<?xml version="1.0" encoding="utf-8"?>
<Override>
<Items>
  <Item name="" identifier="pump" tags="pump" linkable="true" allowedlinks="hull" category="Machine">
    <Sprite texture="Pumps.png" depth="0.8" sourcerect="0,0,200,126" />
    <BrokenSprite texture="Pumps.png" sourcerect="200,0,200,126" depth="0.8" maxcondition="80" fadein="true" />
    <BrokenSprite texture="Pumps.png" sourcerect="0,129,200,126" depth="0.8" maxcondition="0" />
