      <GuiFrame relativesize="0.2,0.16" minsize="400,180" maxsize="480,216" anchor="Center" relativeoffset="-0.1,0.27" style="ItemUI" />
      <RequiredSkill identifier="mechanical" level="40" />
      <RequiredItem items="wrench" type="Equipped" />
    </Repairable>
  </Item>
